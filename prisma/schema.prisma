
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Product {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  description String
  image String
  price Float
  category String
  shop String

}

model User {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  hashedPassword String
}

model Discount {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  code String @unique
  discount Float?
  deliveryForFree Boolean?
}